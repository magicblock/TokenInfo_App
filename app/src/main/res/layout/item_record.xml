<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <TextView
            android:id="@id/txt_symbol"
            android:background="@color/color_yellow"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_6"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dp_12"/>

    <TextView
            android:id="@id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:textSize="@dimen/dp_12"/>

    <TextView
            android:id="@id/txt_operation"
            android:layout_below="@id/txt_symbol"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dp_12"/>

    <TextView
            android:id="@id/txt_profit"
            android:layout_alignStart="@id/txt_time"
            android:layout_below="@id/txt_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"
            android:textSize="@dimen/dp_12"/>

    <TextView
            android:id="@id/txt_explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_below="@id/txt_operation"
            android:textSize="@dimen/dp_12"/>
</RelativeLayout>